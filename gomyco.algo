ALGORITHM countStr
VAR
    str : STRING
    NB_W , NB_V , NB_C , i : INTEGER
BEGIN

    write ("enter a string")
    read (str)

     WHILE (str(i) <> ".") DO
        NB_C := NB_C+1
        
        IF (str(i) = ("a" , "o" , "e" , "i" , "u" , "y" , "A" , "O" , "E" , "I" , "U" , "Y") ) THEN
            NB_V = NB_V +1
        END_IF
        
        IF (str(i) = " ") THEN
            NB_W = NB_W +1
        END_IF

     END_WHILE

    write (NB_W)
    write (NB_V)
    write (NB_C)

END
